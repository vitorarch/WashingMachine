LIBRARY ieee;
USE ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity Clothes_Level is
    port ( 
			  Sensor_distance01   : in std_logic_vector(11 downto 0);
           Sensor_distance02   : in std_logic_vector(11 downto 0);
			  Sensor_distance03   : in std_logic_vector(11 downto 0);
           Level               : out std_logic_vector(1 downto 0)
			 );
end fulladder;

architecture estrutural of Clothes_Level is

variable average : std_logic_vector(11 downto 0);
variable result : unsigned(3 downto 0); 

begin 

average = (Sensor_distancia01 + Sensor_distancia02 + Sensor_distancia03)/3;
result = to_unsigned(average);

if(average < "1365") then 
	Level = "11";
elsif (average < "2739") then 
	Level = "01";
else
	Level = "00";
	
end process;
	
end estrutural ;